  "scripts": {
    "build": "rimraf build && node ./esbuild.config.js && tsc",
    "lint": "eslint src/** --fix",
    "prettier": "prettier --write 'src/**/*.{js,ts,json}'",
    "prepublishOnly": "npm run build"
  },
  "author": "Julian Ä†wirko <julian.io>",
  "license": "MIT",
  "homepage": "https://github.com/xdevguild/buildo-begins",
  "repository": {
